.header 
  .title
    cafe app
    %i.fas.fa-coffee
  .name-box
    .user-name taku
    .box  
      .box_user_edit
        = link_to  do
          = icon('fas','edit',class: 'icon')
      .box_cog
        = link_to  do
          = icon('fas', 'cog',class: 'icon')
       
.navigation_bar
  .review 
    review 
  %form 
    .input-box
      %input{type: "text", placeholder: "キーワード検索", class: "input-text"}
    .form-btn
      %input{type: "submit", value: "検索", class: "send__btn"} 
     
.review_main
  .post-box
    .post-box-left
      .cafe-name cafe-a
      .address-box 
        %i.fas.fa-map-marker-alt
        .address 東京都文京区小日向
      .nickname Review Writer : taku
